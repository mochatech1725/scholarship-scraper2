{
  "websites": [
    {
      "name": "collegescholarship",
      "url": "https://collegescholarship.com",
      "type": "api",
      "apiEndpoint": "https://api.collegescholarship.com/scholarships",
      "apiKey": "ENV_VAR_COLLEGESCHOLARSHIP_API_KEY",
      "enabled": true,
      "scraperClass": "CollegeScholarshipScraper"
    },
    {
      "name": "bold_org",
      "url": "https://bold.org",
      "type": "crawl",
      "crawlUrl": "https://bold.org/scholarships",
      "selectors": {
        "scholarshipLinks": "a[href*='/scholarship/']",
        "title": "h1, h2, .scholarship-title",
        "amount": ".amount, .award-amount, [data-testid='amount']",
        "deadline": ".deadline, .due-date, [data-testid='deadline']",
        "description": ".description, .summary, [data-testid='description']",
        "organization": ".organization, .sponsor, [data-testid='organization']"
      },
      "enabled": true,
      "scraperClass": "GumLoopScraper"
    },
    {
      "name": "fastweb",
      "url": "https://www.fastweb.com",
      "type": "crawl",
      "crawlUrl": "https://www.fastweb.com/college-scholarships",
      "selectors": {
        "scholarshipLinks": "a[href*='/scholarship/']",
        "title": "h1, h2, .scholarship-title",
        "amount": ".amount, .award-amount",
        "deadline": ".deadline, .due-date",
        "description": ".description, .summary",
        "organization": ".organization, .sponsor"
      },
      "enabled": true,
      "scraperClass": "GumLoopScraper"
    },
    {
      "name": "scholarships_com",
      "url": "https://www.scholarships.com",
      "type": "crawl",
      "crawlUrl": "https://www.scholarships.com/financial-aid/college-scholarships",
      "selectors": {
        "scholarshipLinks": "a[href*='/scholarship/']",
        "title": "h1, h2, .scholarship-title",
        "amount": ".amount, .award-amount",
        "deadline": ".deadline, .due-date",
        "description": ".description, .summary",
        "organization": ".organization, .sponsor"
      },
      "enabled": true,
      "scraperClass": "GumLoopScraper"
    },
    {
      "name": "careeronestop",
      "url": "https://www.careeronestop.org",
      "type": "crawl",
      "crawlUrl": "https://www.careeronestop.org/scholarships",
      "selectors": {
        "scholarshipLinks": "a[href*='/scholarship/']",
        "title": "h1, h2, .scholarship-title",
        "amount": ".amount, .award-amount",
        "deadline": ".deadline, .due-date",
        "description": ".description, .summary",
        "organization": ".organization, .sponsor"
      },
      "enabled": true,
      "scraperClass": "GumLoopScraper"
    },
    {
      "name": "discovery_crawl",
      "type": "discovery",
      "seedUrls": [
        "https://www.harvard.edu/financial-aid/scholarships",
        "https://www.stanford.edu/admission-aid/financial-aid/scholarships",
        "https://www.mit.edu/admissions-aid/financial-aid/scholarships",
        "https://www.yale.edu/admissions-aid/financial-aid/scholarships",
        "https://www.princeton.edu/admission-aid/financial-aid/scholarships"
      ],
      "domainFilter": ".edu",
      "keywordFilter": ["scholarship", "financial aid", "grant", "award"],
      "maxDepth": 3,
      "maxPages": 100,
      "enabled": true,
      "scraperClass": "GumLoopDiscoveryScraper"
    }
  ],
  "searchConfig": {
    "maxResultsPerTerm": 50,
    "delayBetweenRequests": 2000,
    "userAgent": "Mozilla/5.0 (compatible; ScholarshipBot/1.0; +https://yourdomain.com/bot)",
    "respectRobotsTxt": true
  },
  "gumloopConfig": {
    "baseUrl": "https://api.gumloop.com",
    "rateLimit": {
      "requestsPerSecond": 2,
      "maxConcurrent": 5
    },
    "crawlerSettings": {
      "timeout": 30000,
      "retryAttempts": 3,
      "followRedirects": true,
      "handleJavaScript": true,
      "extractForms": false
    },
    "discoverySettings": {
      "maxDepth": 3,
      "maxPagesPerDomain": 50,
      "allowedDomains": [".edu", ".org", ".gov"],
      "blockedDomains": ["facebook.com", "twitter.com", "linkedin.com"],
      "keywordPatterns": [
        "scholarship",
        "financial aid", 
        "grant",
        "award",
        "fellowship",
        "tuition assistance"
      ]
    }
  }
} 