# Python Scraper Environment Configuration

# Database Configuration (for local development)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=scholarships

# AWS Configuration (for cloud deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# RDS MySQL Configuration (for cloud deployment)
RDS_MYSQL_HOST=your-rds-endpoint.region.rds.amazonaws.com
RDS_MYSQL_PORT=3306
RDS_MYSQL_USER=your-rds-username
RDS_MYSQL_PASSWORD=your-rds-password
RDS_MYSQL_DATABASE=scholarships

# Scraping Configuration
MAX_SCHOLARSHIPS_PER_SCRAPER=50
SCRAPING_DELAY_SECONDS=2
MAX_RETRY_ATTEMPTS=3
REQUEST_TIMEOUT_SECONDS=30

# Rate Limiting
RATE_LIMIT_CALLS_PER_SECOND=1.0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Development
ENVIRONMENT=local
DEBUG=true

# Scraper Selection
# Set to 'python' to use Python scrapers, 'typescript' to use TypeScript scrapers
SCRAPER_TYPE=python

# Specific Scraper Configuration
FASTWEB_ENABLED=true
SCHOLARSHIPS_COM_ENABLED=false
COLLEGESCHOLARSHIP_ENABLED=false
